!!! Strict

%html{html_attrs('en-us')}
  %head
    %title iPhone Level Editor
    %link{:type => "text/css", :href => "/main.css", :media => "screen", :rel => "stylesheet"}
    %link{:type => "text/css", :href => "/stylesheets/jquery.treeview.css", :media => "screen", :rel => "stylesheet"}
    %link{:type => "text/css", :href => "/stylesheets/colorpicker.css", :media => "screen", :rel => "stylesheet"}

    %script{:type => "text/javascript", :src => "javascripts/jquery-1.3.2.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/jquery-ui.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/jquery.treeview.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/sammy-0.3.0.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/colorpicker.js"}
    %script{:type => "text/javascript", :src => "javascripts/app.js"}

  #header
    %ul{:id => "nav"}
      %li New Level
      %li Export Level Pack
      %li Import Level Pack
      %li Import Texture

  #notice
  #form
    level pack name
    %br
    %input{:id => :l, :type => :text}
    
  #content

    #levels
      %h2 Level Packs

      %span{:class => "level-pack-options"}
        %a{:href => "#/new-level-pack", :id => "new-level-pack", :title => "Create new level pack"}
        %a{:href => "#/import-level-pack", :id => "import-level-pack", :title => "Import level pack"}

      %ul{:id => "level-packs", :class => "filetree treeview-black"}

    #canvas
      #iphone-case{:class => "horizontal"}
        #iphone

      #options
        %a{:href => "#/change-background-color", :id => "color-wheel", :title => "Change background color"}
        %a{:href => "#/new-level", :id => "new-level", :title => "New Level"}
        %a{:href => "#/save-canvas", :id => "save-level", :title => "Save level"}
        %a{:href => "#/save-canvas-as", :id => "save-level-as", :title => "Save level as"}
        %a{:href => "#/clear-canvas", :id => "clear", :title => "Clear canvas"}
        %a{:href => "#/flip", :id => "change-orientation", :class => "clockwise", :title => "Change Orientation"}

      #sprite
        %a{:href => "#/close", :id => :close}
        %a{:href => "#/delete"} Remove Sprite 
        #position
          Located at
          %span{:id => :x}
          x
          %span{:id => :y}
        Z-Index
        %a{:id => "layer-to-bottom", :href => "#/move-layer/bottom", :title => "Send to back"}
        %a{:id => "layer-down", :href => "#/move-layer/-1", :title => "Move down"}
        %a{:id => "layer-up", :href => "#/move-layer/1", :title => "Move up"}
        %a{:id => "layer-to-front", :href => "#/move-layer/top", :title => "Send to front"}
        %br
        Tag
        %input{:id => :tag, :type => :text}

      #footer
        %p
          Brought to you by
          %a{:href => "http://www.appsbynick.com"} appsbynick

    #textures
      %h2 Sprites Packs
      #texture-options
        %a{:href => "#/new-texture-pack", :id => "new-texture-pack", :title => "Create new pack"}
